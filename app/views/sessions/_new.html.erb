<% if flash[:error] %>
<div style="color: red;">
<%= flash[:error] %>
</div>
<% end %>

<% form_tag :controller => :sessions, :action => :create do %>
	
	<fieldset>
	  <p class= "login_field initial_gray">
		  <span id="username"><%= text_field_tag :name, params[:name] %></span>
		  <span id="password"><%= password_field_tag :password, params[:password] %></span>
      <span id="submit_button"><%= image_submit_tag "welcome/header_login_button.png" %></span>
	  </p>
	</fieldset>
	
<% end %>
