<h1>New trade</h1>

<% form_for(@trade) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :time %><br />
    <%= f.datetime_select :time %>
  </p>
  <p>
    <%= f.label :quantity %><br />
    <%= f.text_field :quantity %>
  </p>
  <p>
    <%= f.label :trade_order_id %><br />
    <%= f.text_field :trade_order_id %>
  </p>
  <p>
    <%= f.label :counterpart_id %><br />
    <%= f.text_field :counterpart_id %>
  </p>
  <p>
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', trades_path %>
